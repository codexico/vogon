<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Vogon" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "vogon" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery.xdomainajax', 'vogon' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
