<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Vogon" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "vogon" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'jquery.xdomainajax', 'vogon' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
    <div id="user_nav">
      <% if current_user %>
        Welcome <%= current_user.name %>!
        <%= link_to "Sair", signout_path %>
      <% else %>
        <%= link_to "Logar com Twitter", "/auth/twitter" %>
        <%= link_to "Logar com Facebook", "/auth/facebook" %>
      <% end %>
    </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
